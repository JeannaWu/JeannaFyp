 <!DOCTYPE html>
<html>

<style type="text/css">
div#user_info {background-color:#FFFFFF;height:150px; float: left;}
.button {padding-top: 0.3rem;
    padding-right: 1rem;
    padding-bottom: 0.3rem;
    padding-left: 1rem;}

</style>
</head>
<body>
 
  <div id="row">
    
            <aside class="col-md-4">
                <section class="user_info">
                   <%= image_tag @user.avatar.url(:thumb) %>
                   <h1><font size="3"><%= @user.name %></font></h1>
                   <span> <%= link_to "Settings",edit_user_registration_path, class: "button" %></span>
      
                <span><b>Posts:</b> <%= @user.posts.count %></span>
                </section>
                <section class="stats">
                <%= render 'shared/stats' %> 
                <div class="user_avatars">
                 <% if user_signed_in? %>
                <div id="follow_user <%=@user.id%> ">
                <%= render :partial => "follow_user", :locals => {:user => @user} %>
                
                <% end %>
            </div>
          
          </section>
     </aside>  
<aside class="col-md-8">
  <% if @user.posts.any? %>
  <h1>Posts(<%= @user.posts.count %>)</h1>
  <div id="posts">
    <%= render @posts%>
  </div>
  <%= will_paginate @posts %>
  <%else%>
  <h1> <%= link_to "Share your idea", new_post_path %></h1>

  <%end%>
</aside>
</div>
</body>
</html>
